$( document ).ready(function() {

        $.ajax({
        type:"GET",
        dataType:'json',
        url:"/home/notes",
        success: (function(result){
            if (result){
             document.getElementById('notes').value= result; }
        })
        });
});
    </script>
    <script>
$(function(){
     var chart = Morris.Bar({
         element: 'line-chart',
         data: [0,0],
         xkey: 'stat',
         ykeys: ['value', 'aim'],
         labels: ['Actual', 'Aim'],
         fillOpacity: 0.6,
         resize: true,
         barColors:['red', "green"]
        });
        $.ajax({
           type: "GET",
           dataType: 'json',
           url: "/home/charts"
           })
        .done(function(data){
            chart.setData(data);
            })
        .fail(function(){
            alert("Let me try that again!");
        });
});
    </script>
